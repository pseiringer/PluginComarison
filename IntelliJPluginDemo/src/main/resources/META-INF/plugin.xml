<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.example.IntelliJPluginDemo</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>IntelliJPluginDemo</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="support@yourcompany.com" url="https://www.yourcompany.com">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.example.intellijplugindemo.Startup" />
        <toolWindow id="Recent Changes" secondary="true" icon="AllIcons.Actions.Diff" anchor="right"
                    factoryClass="com.example.intellijplugindemo.toolwindows.RecentChangesToolWindowFactory"/>
    </extensions>

<!--    <applicationListeners>-->
<!--        <listener-->
<!--                class="com.example.intellijplugindemo.eventlisteners.SimpleChangeDocumentListener"-->
<!--                topic="com.intellij.openapi.editor.event.DocumentListener"/>-->
<!--    </applicationListeners>-->

    <actions>
        <action id="com.example.intellijplugindemo.actions.PopupDialogAction"
                class="com.example.intellijplugindemo.actions.PopupDialogAction" text="Popup Dialog Action Demo"
                description="SDK action example">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="com.example.intellijplugindemo.actions.CopySelectedTextAction"
                class="com.example.intellijplugindemo.actions.CopySelectedTextAction" text="Google Selected Text"
                description="Google Example">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="com.example.intellijplugindemo.actions.EditorContextDialogTest"
                class="com.example.intellijplugindemo.actions.EditorContextDialogTest" text="Context Menu Demo"
                description="Context Menu Demo">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="ReplayLastChange" class="com.example.intellijplugindemo.actions.ApplyRecentChange" text="ReplayLastChange"
                description="ReplayLastChange">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt R"/>
        </action>
    </actions>
</idea-plugin>