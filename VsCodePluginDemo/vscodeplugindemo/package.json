{
  "name": "pseiringer-recentchangesdemo",
  "displayName": "RecentChanges (demo)",
  "description": "",
  "publisher": "pseiringer",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodeplugindemo.applyRecentChange",
        "title": "Apply recent Change"
      }

    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "changes-explorer",
          "title": "Changes Explorer",
          "icon": "$(arrow-swap)"
        }
      ]
    },
    "views": {
      "changes-explorer": [
        {
          "id": "recentChangeView",
          "name": "Recent Changes"
        }
      ]
    },
    "menus": {},
    "keybindings": [
      {
        "command": "vscodeplugindemo.applyRecentChange",
        "key": "shift+alt+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": [
      {
        "title": "Recent Changes",
        "properties": {
          "recentChanges.debounceTime": {
            "type": "integer",
            "minimum": 1,
            "default": 750,
            "description": "The time (in milliseconds) between inputs it takes for a change to be registered as completed."
          },
          "recentChanges.queueSize": {
            "type": "integer",
            "minimum": 1,
            "default": 10,
            "description": "The maximum amount of recent changes remembered before old changes are forgotten."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.32",
    "@types/expect.js": "^0.3.29",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.41.0",
    "expect.js": "^0.3.1",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "expect.js": "^0.3.1"
  }
}
