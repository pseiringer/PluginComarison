{
  "name": "vscodeplugindemo",
  "displayName": "VsCodePluginDemo",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodeplugindemo.helloWorld",
        "title": "Hello World",
        "icon": "$(heart)"
      },
      {
        "command": "vscodeplugindemo.returnOne",
        "title": "returnOne",
        "icon": "$(pass-filled)"
      },
      {
        "command": "vscodeplugindemo.applyRecentChange",
        "title": "Apply recent Change"
      },
      {
          "command": "recentChangeView.refreshEntry",
          "title": "Refresh",
          "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "changes-explorer",
          "title": "Changes Explorer",
          "icon": "$(arrow-swap)"
        }
      ]
    },
    "views": {
      "changes-explorer": [
        {
          "id": "recentChangeView",
          "name": "Recent Changes"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "vscodeplugindemo.helloWorld",
          "alt": "vscodeplugindemo.returnOne",
          "group": "navigation"
        }
      ],
      "view/title": [
          {
              "command": "recentChangeView.refreshEntry",
              "when": "view == recentChangeView",
              "group": "navigation"
          }
      ]
    },
    "keybindings": [
      {
        "command": "vscodeplugindemo.applyRecentChange",
        "key": "shift+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration":[
      {        
        "title": "Recent Changes Settings",
        "properties": {
          "someSetting": {
            "type": "string",
            "default": "abc",
            "description": "some description"
          },
          "server.name": {
            "type": "string",
            "default": "def",
            "description": "some description"
          },
          "server.password": {
            "type": "null",
            "scope": "application",
            "markdownDescription": "[Set Password](mynotebook.setPassword)"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.32",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5"
  }
}
